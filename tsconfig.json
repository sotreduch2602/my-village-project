{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/messages/*": ["./messages/*"],

      //Public
      "@/public/*": ["./public/*"],
      "@/fonts/*": ["./public/fonts/*"],

      //Shared
      "@/shared/*": ["./src/shared/*"],
      "@/services/*": ["./src/shared/services/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/constants/*": ["./src/shared/*"],
      "@/enums/*": ["./src/shared/enums/*"],
      "@/types/*": ["./src/shared/types/*"],
      "@/store/*": ["./src/shared/store/*"],

      //Components
      "@/components/*": ["./src/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
